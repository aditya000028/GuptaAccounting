@page
@model GuptaAccounting.Pages.Clients.EditModel
@{

    ViewData["Title"] = "Edit";
}

<br />
<h1 class="text-info">Edit Client Info</h1>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <input type="hidden" asp-for="Client.Id" />
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Client.Name"></label>
            </div>
            <div class="col-6">
                <input type="text" asp-for="Client.Name" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="Client.Name"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Client.WorkType"></label>
            </div>
            <div class="col-6">
                <input type="text" asp-for="Client.WorkType" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="Client.WorkType"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Client.NextStep"></label>
            </div>
            <div class="col-6">
                <input type="text" asp-for="Client.NextStep" class="form-control" />
            </div>

        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Client.ContactNumber"></label>
            </div>
            <div class="col-6">
                <input asp-for="Client.ContactNumber" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="Client.ContactNumber"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Update" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="ExistingClients" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}