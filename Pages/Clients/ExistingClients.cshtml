@page
@model GuptaAccounting.Pages.Clients.ExistingClientsModel
@{
    ViewData["Title"] = "ExistingClients";
}


<div class="container row p-0 m-0">
    <div class="col-9">
        <h1 class="text-info">ExistingClients</h1>
    </div>
    <div class="col-3">
        <a asp-page="Create" class="btn btn-info form-control text-white">Create New Client</a>
    </div>
    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.Clients.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="Clients.FirstOrDefault().Name"></label>
                        </th>
                        <th>
                            <label for="WorkType">Work Type</label>
                        </th>
                        <th>
                            <label asp-for="Clients.FirstOrDefault().NextStep"></label>
                        </th>
                        <th>
                            <label asp-for="Clients.FirstOrDefault().ContactNumber"></label>
                        </th>
                        <th>

                        </th>
                    </tr>
                    @foreach (var item in Model.Clients)
                    {
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.Name)
                    </td>
                    <td>
                        @{ 
                            if(item.Bookkeeping == true)
                            {
                                Html.DisplayFor(m => item.Bookkeeping);

                            }
                            if (item.Personal_Income_Taxation == true)
                            {
                                Html.DisplayFor(m => item.Personal_Income_Taxation);

                            }
                            if (item.Self_Employed_Business_Taxes == true)
                            {
                                Html.DisplayFor(m => item.Self_Employed_Business_Taxes);

                            }
                            if (item.GST_PST_WCB_Returns == true)
                            {
                                Html.DisplayFor(m => item.GST_PST_WCB_Returns);

                            }
                            if (item.Tax_Returns == true)
                            {
                                Html.DisplayFor(m => item.Tax_Returns);

                            }
                            if (item.Payroll_Services == true)
                            {
                                Html.DisplayFor(m => item.Payroll_Services);

                            }
                            if (item.Previous_Year_Filings == true)
                            {
                                Html.DisplayFor(m => item.Previous_Year_Filings);

                            }
                            if (item.Government_Requisite_Form_Applications == true)
                            {
                                Html.DisplayFor(m => item.Government_Requisite_Form_Applications);

                            }
                            if (item.Other != null)
                            {
                                Html.DisplayFor(m => item.Other);

                            }

                        }
                        
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.NextStep)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.ContactNumber)
                    </td>
                    <td>
                        <button asp-page-handler="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete this client?')" class="btn btn-danger btn-sm">Delete</button>
                        <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm text-white">Edit</a>
                    </td>
                </tr>
                    }
                </table>
            }
            else
            {
                <br />
                <p>No clients in records</p>
            }

        </form>
    </div>

</div>