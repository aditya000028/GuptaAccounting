@page
@model GuptaAccounting.Pages.Clients.ExistingClientsModel
@{
    ViewData["Title"] = "ExistingClients";
}


<div class="container row p-0 m-0">
    <div class="col-9">
        <h1 class="text-info">ExistingClients</h1>
    </div>
    <div class="col-3">
        <a class="btn btn-info form-control text-white">Create New Client</a>
    </div>
    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.Clients.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="Clients.FirstOrDefault().Name"></label>
                        </th>
                        <th>
                            <label asp-for="Clients.FirstOrDefault().WorkType"></label>
                        </th>
                        <th>
                            <label asp-for="Clients.FirstOrDefault().NextStep"></label>
                        </th>
                        <th>
                            <label asp-for="Clients.FirstOrDefault().Cont"></label>
                        </th>
                        <th>

                        </th>
                    </tr>
                    @foreach (var item in Model.Clients)
                    {
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.WorkType)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.NextStep)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.ContactNumber)
                    </td>
                    <td>
                        <button class="btn btn-danger btn-sm">Delete</button>
                        <a class="btn btn-success btn-sm text-white">Edit</a>
                    </td>
                </tr>
                    }
                </table>
            }
            else
            {
                <br />
                <p>No clients in records</p>
            }

        </form>
    </div>

</div>